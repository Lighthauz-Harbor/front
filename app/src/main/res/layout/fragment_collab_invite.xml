<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dvidr_000.lighthauzproject.CollabInviteFragment">

    <TextView
        android:id="@+id/tvCollabInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="@string/CollabInviteTip" />

    <ProgressBar
        android:id="@+id/pBarCollabInvite"
        android:visibility="gone"
        android:progressDrawable="@drawable/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    </ProgressBar>
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_centerInParent="true"
        android:id="@+id/CollabInviteNotice"
        android:text="@string/EmptySuggestion"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/tvCollabInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rec_list_collab_invite">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:text="@string/skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightGrey"
            android:id="@+id/btnSkipCollabInvite" />
        <Button
            android:text="@string/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/btnNextCollabInvite" />
    </LinearLayout>
</RelativeLayout>