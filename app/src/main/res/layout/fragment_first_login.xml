<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.dvidr_000.lighthauzproject.FirstLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_business_center_black_48dp"
            android:id="@+id/ic_first_briefcase"
            android:layout_marginTop="56dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp"
            android:id="@+id/ic_first_light"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/ic_first_briefcase"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_search_white_24dp"
            android:tint="#000000"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/ic_first_briefcase"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            android:id="@+id/ic_first_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_people_outline_white_24dp"
            android:tint="#000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ic_first_briefcase"
            android:layout_marginTop="32dp"
            android:id="@+id/ic_first_people" />

        <TextView
            android:text="@string/welcomeToLighthauz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/tvFirstLogin1"
            android:layout_below="@id/ic_first_people"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/firstIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAlignment="center"
            android:id="@+id/tvFirstLogin2"
            android:layout_margin="48dp"
            android:layout_below="@+id/tvFirstLogin1"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <Button
        android:text="@string/getStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/btnNextFirstLogin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>