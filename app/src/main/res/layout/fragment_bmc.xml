
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.dvidr_000.lighthauzproject.BMCFragment">
    <Button
        android:text="@string/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnNextIdeaBMC"
        android:background="@color/white"
        android:elevation="2dp"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bmc"
            android:id="@+id/imageView2"
            android:layout_below="@+id/tvBmcInfo2"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/BMCInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:id="@+id/tvBmcInfo2"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_below="@+id/tvBmcInfo1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/BMCInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:id="@+id/tvBmcInfo1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
