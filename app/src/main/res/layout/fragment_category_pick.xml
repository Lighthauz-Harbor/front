<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dvidr_000.lighthauzproject.CategoryPickFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvCategoryPick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:text="@string/chooseCategoryTip" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/tvCategoryPick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rec_list_category">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:text="@string/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/btnNextCategoryPick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
