<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.dvidr_000.lighthauzproject.VerificationActivity">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="@string/insertHere"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/tvVerifNotice"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:visibility="gone"
        android:text="@string/insertHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVerifLink"
        android:layout_below="@+id/tvVerifNotice"
        android:layout_alignStart="@+id/tvVerifNotice"
        android:layout_marginTop="26dp" />

    <Button
        android:visibility="gone"
        android:text="@string/backToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/btnBackToLogin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
