<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dvidr_000.lighthauzproject.RequestReceivedFragment">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec_list_req_received">
        </android.support.v7.widget.RecyclerView>
        <ProgressBar
            android:id="@+id/pBarReqReceived"
            android:visibility="gone"
            android:progressDrawable="@drawable/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </ProgressBar>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/reqReceivedNotice"
            android:text="@string/EmptyRequest"/>
</FrameLayout>
