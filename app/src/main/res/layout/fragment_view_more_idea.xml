<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dvidr_000.lighthauzproject.ViewMoreIdeaFragment">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rec_list_view_more_idea">
    </android.support.v7.widget.RecyclerView>
    <ProgressBar
        android:id="@+id/pBarViewMoreIdea"
        android:visibility="gone"
        android:progressDrawable="@drawable/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </ProgressBar>
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/viewMoreIdeaNotice"
        android:text="@string/EmptyIdea"/>
</FrameLayout>
