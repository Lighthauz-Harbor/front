<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:elevation="100dp"
        card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/cont_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0">

            <ImageView
                android:id="@+id/ic_list_idea"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_lightbulb_outline_black_24dp"
                android:scaleType="centerInside"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/tv_title_list_idea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toEndOf="@id/ic_list_idea"
                android:textSize="24sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_margin="8dp"
                android:layout_marginStart="32dp"
                android:text="@string/insertHere"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>